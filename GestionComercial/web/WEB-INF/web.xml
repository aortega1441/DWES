<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ValidaLogin</servlet-name>
        <servlet-class>Servlets.ValidaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaLista</servlet-name>
        <servlet-class>Servlets.ValidaLista</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaVenta</servlet-name>
        <servlet-class>Servlets.ValidaVenta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaProductos</servlet-name>
        <servlet-class>Servlets.ListaProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaProducto</servlet-name>
        <servlet-class>Servlets.ValidaProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaComerciales</servlet-name>
        <servlet-class>Servlets.ListaComerciales</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaComercial</servlet-name>
        <servlet-class>Servlets.ValidaComercial</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidaLogin</servlet-name>
        <url-pattern>/ValidaLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaLista</servlet-name>
        <url-pattern>/ValidaLista</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaVenta</servlet-name>
        <url-pattern>/ValidaVenta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaProductos</servlet-name>
        <url-pattern>/ListaProductos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaProducto</servlet-name>
        <url-pattern>/ValidaProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaComerciales</servlet-name>
        <url-pattern>/ListaComerciales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaComercial</servlet-name>
        <url-pattern>/ValidaComercial</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
